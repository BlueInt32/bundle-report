@model Collecte.WebApp.Areas.admin.Models.HomeModel
@{
    ViewBag.Title = "admin Home";
}

<script src="@Url.Content("~/Areas/admin/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Areas/admin/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<script src="@Url.Content("~/Areas/admin/Scripts/jquery.ui.datepicker-fr.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Reporting non exécuté !")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Dates du reporting</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.DateDebut)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.DateDebut)
                @Html.ValidationMessageFor(m => m.DateDebut)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.DateFin)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.DateFin)
                @Html.ValidationMessageFor(m => m.DateFin)
            </div>

            <p>
                <input type="submit" value="Valider" />
            </p>
        </fieldset>
    </div>
}

<div>
@Html.Partial("_ReportingResultsPartial")
</div>

<script type="text/javascript">
    $(function () {
        $("#DateFin, #DateDebut").datepicker($.datepicker.regional["fr"]);
    });
</script>
